# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Supabase (FREE tier - get from https://supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Upstash Redis (FREE tier - get from https://upstash.com)
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your-token

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# OAuth (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# AI Services Configuration
AI_MODE=local
# Options: 'local' (run on your computer), 'huggingface' (free API), 'hybrid'

# Hugging Face (FREE tier - get from https://huggingface.co)
HUGGINGFACE_API_KEY=your-hf-api-key

# Local AI Services (if running locally)
STT_SERVICE_URL=http://localhost:5000
TRANSLATION_SERVICE_URL=http://localhost:5001
TTS_SERVICE_URL=http://localhost:5002

# Whisper Configuration
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large (larger = better quality, slower)

# Translation Configuration
NLLB_MODEL=nllb-200-distilled-600M
# Options: nllb-200-distilled-600M (fast), nllb-200-1.3B (better quality)

# TTS Configuration
TTS_ENGINE=piper
# Options: piper (fast, CPU), coqui (better quality), edge (Microsoft API)

# Performance
MAX_AUDIO_CHUNK_SIZE=100
# Audio chunk size in milliseconds

TRANSLATION_CACHE_TTL=86400
# Cache translations for 24 hours (in seconds)

MAX_CONCURRENT_SESSIONS=100
# Maximum concurrent translation sessions

# Rate Limiting
RATE_LIMIT_WINDOW=60000
# Rate limit window in milliseconds (1 minute)

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
BETTER_STACK_TOKEN=your-better-stack-token

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
# Comma-separated list of allowed origins

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_CONVERSATION_HISTORY=true
ENABLE_QUALITY_INDICATORS=true
ENABLE_VOICE_ACTIVITY_DETECTION=true

# Supported Languages (ISO 639-1 codes)
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,ar,zh,ja,ko,hi,tr,nl,pl
